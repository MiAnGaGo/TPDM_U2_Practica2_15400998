<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registro detalle de compras"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="25dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad"
        android:id="@+id/cantidadDetCompra"
        android:layout_marginTop="10dp"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio"
        android:id="@+id/precioDetCompra"
        android:layout_marginTop="10dp"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID almacen"
        android:id="@+id/detCompraAlmacen"
        android:layout_marginTop="10dp"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID compra"
        android:id="@+id/detCompraCompra"
        android:layout_marginTop="10dp"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="seleccione ID de la sig. lista (toque aqui para actualizar)"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/mostrarAlmacenEnDetCompra"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/encAlmEnDetComp"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginRight="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mostrarTodosAlmacenesEnDetCompras"
            android:textColor="#000000"
            android:textSize="16dp"
            />
    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="seleccione ID de la sig. lista (toque aqui para actualizar)"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/mostrarCompraEnDetCompra"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/encCompEnDetComp"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginRight="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mostrarTodasComprasEnDetCompras"
            android:textColor="#000000"
            android:textSize="16dp"
            />
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="insertar"
            android:id="@+id/insertarDetCompra"
            android:background="#8F2DFF00"
            android:textColor="#070707"
            android:textStyle="bold"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ver"
            android:id="@+id/mostrarDetCompra"
            android:background="#8F0052FF"
            android:textColor="#070707"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eliminar"
            android:id="@+id/eliminarDetCompra"
            android:background="#8FFF0000"
            android:textColor="#070707"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:padding="6dp"
            />

        <Button
            android:id="@+id/regresarDetCompra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#8F030202"
            android:text="Regresar"
            android:textColor="#070707"
            android:textStyle="bold" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mostrarTodosDetCompras"
            android:textColor="#000000"
            android:textSize="18dp"
            />
    </ScrollView>
</LinearLayout>